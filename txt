# Verificação de ID

$domain='https://www.suportesmartparagominas.com.br'
1..12 | ForEach-Object {
  $id=$_; 
  try {
    $r = Invoke-WebRequest -Uri "$domain/categoria/$id" -UseBasicParsing -TimeoutSec 6 -ErrorAction Stop
    $title = ([regex]::Match($r.Content,'<title>(.*?)</title>','Singleline,IgnoreCase').Groups[1].Value).Trim()
    if (-not $title) { $title = 'sem título detectado' }
    Write-Host "id=$id -> $title"
  } catch { Write-Host "id=$id -> (não existe / erro)" }
}

